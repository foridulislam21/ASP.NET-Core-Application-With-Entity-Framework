@model Ecommerce.Models.Customer

<div class="container-fluid">
    <form method="post" id="editForm">
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LoyaltyPoint"></label>
            <input asp-for="LoyaltyPoint" class="form-control" />
        </div>
        <div class="form-group">
            <button class="btn btn-outline-success" type="button" id="EsaveButton">Save</button>
        </div>
        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script>
            $("#EsaveButton").click(function () {
                $.ajax({
                    url: "/Customer/Edit",
                    method: "POST",
                    data: $("#editForm").serialize()
                }).done(function (response) {
                    debugger;
                    $("#createModal").modal("hide");
                    $("#listArea").html(response);
                });
            });
        </script>
    </form>
</div>