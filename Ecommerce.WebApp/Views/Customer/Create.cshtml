@model Ecommerce.WebApp.Models.Customer.CustomerCreateViewModel
<div>
    <form method="post" asp-controller="Customer" id="createForm">
        <div class="form-group">
            <label asp-for="Name">Full Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" placeholder="Enter Your Name" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address">Address</label>
            <input type="text" class="form-control" id="address" asp-for="Address" placeholder="Enter Address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LoyaltyPoint">Loyalty Point</label>
            <input type="text" class="form-control" id="loyaltyPoints" asp-for="LoyaltyPoint" placeholder="Enter Employee Loyalty Point">
            <span asp-validation-for="LoyaltyPoint" class="text-danger"></span>
        </div>
        <button type="button" class="btn btn-primary" id="saveButton">Save</button>
    </form>
    <script>
        //post customer data
        $("#saveButton").click(function (event) {
            var res = validate();
            if (res === false) {
                return false;
            }
            $.ajax({
                    url: "/Customer/Create",
                    method: "POST",
                    data: $("#createForm").serialize()
                })
                .done(function (response) {
                    debugger;
                    $("#listArea").html(response);
                }).fail(function () {
                    alert("Request Failed");
                });
        });
    </script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</div>