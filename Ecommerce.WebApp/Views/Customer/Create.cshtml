@model Ecommerce.Models.Customer
@{
    Layout = "_Layout";
}
<form method="post">
    <div class="form-group">
                <label for="name">Full Name</label>
                <input type="text" class="form-control" id="name" name="Name" placeholder="Enter Your Name">
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" name="Address" placeholder="Enter Address">
            </div>
            <div class="form-group">
                <label for="loyaltypoint">Loyalty Point</label>
                <input type="text" class="form-control" id="loyaltypoint" name="LoyaltyPoint" placeholder="Enter Employee Loyalty Point">
            </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-controller="Customer"asp-action="Index" class="btn btn-outline-info">Back To List</a>

</form>