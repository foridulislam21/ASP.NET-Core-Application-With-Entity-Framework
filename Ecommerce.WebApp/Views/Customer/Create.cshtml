@model Ecommerce.Models.Customer

<form method="post">
    <div class="form-group">
        <label asp-for="Name">Full Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter Your Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input type="text" class="form-control" asp-for="Address" placeholder="Enter Address">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LoyaltyPoint">Loyalty Point</label>
        <input type="text" class="form-control" asp-for="LoyaltyPoint" placeholder="Enter Employee Loyalty Point">
        <span asp-validation-for="LoyaltyPoint" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-controller="Customer" asp-action="Index" class="btn btn-outline-info">Back To List</a>
</form>