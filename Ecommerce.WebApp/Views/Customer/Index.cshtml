@model IEnumerable<Ecommerce.Models.Customer>
@{
    Layout = "_Layout";
}
<div class="container">
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">
            @ViewBag.SuccessMessage
        </div>
    }
    <h1>Customer List</h1>
    <div class="row ml-3 mb-1">
        <a asp-controller="Customer" asp-action="Create" class="btn btn-outline-primary py-1">Create</a>
    </div>
    <form asp-action="Index" method="get">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text py-1">Find by name</span>
            </div>
            <input class="pr-2 mr-2" type="text" name="search" value="@ViewData["searchData"]" />
            <a asp-action="Index" class="font-weight-bold btn btn-outline-info">Back to List</a>
        </div>
    </form>
    <div class="jumbotron-fluid">
        <table class="table table-bordered table-striped table-hover mt-2 table-responsive-lg table-sm">
            <thead class="text-center bg-transparent">
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Loyalty Point</th>
                <th>Control Button</th>
            </tr>
            </thead>
            <tbody>

            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Address</td>
                    <td>@customer.LoyaltyPoint</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-info btn-sm"><i class="fas fa-edit"></i>Edit</a>
                        <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-danger btn-sm"><i class="fas fa-recycle"></i>Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

