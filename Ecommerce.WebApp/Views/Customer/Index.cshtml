@model IEnumerable<Ecommerce.Models.Customer>
@{
    Layout = "_Layout";
}
<div class="container" id="listArea">
    <div class="jumbotron-fluid">
        <partial name="Common/_SuccessMessage" />
        <partial name="Common/_ErrorMessage" />
        <h1>Customer List</h1>
        <div class="row ml-3 mb-1">
            <button type="button" id="createButton" class="btn btn-outline-primary py-1" data-toggle="modal" data-target="#createModal">Create</button>
        </div>
        <form asp-action="Index" method="get">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text py-1">Find by name</span>
                </div>
                <input class="pr-2 mr-2" type="text" name="search" value="@ViewData["searchData"]" />
                <a asp-action="Index" class="font-weight-bold btn btn-outline-info">Back to List</a>
            </div>
        </form>
        <partial name="Customer/_CustomerList" model="Model" />
    </div>
    <script src="JS/App.js"></script>
    <script src="JS/Edit.js"></script>
    <script>
    $(".deleteButton").click(function () {
            var result = confirm("Are you sure!");
            if (result === true) {
                $.ajax({
                    url: "Customer/Delete",
                    method: "POST",
                    data: {
                        id: $(this).attr("data-id")
                    }
                }).done(function (response) {
                    $("#listArea").html(response);
                });
            }
        });
    </script>
</div>
<div class="modal fade" id="createModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Enter Customer Information</h4>
                <button class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" id="contentModal">
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>