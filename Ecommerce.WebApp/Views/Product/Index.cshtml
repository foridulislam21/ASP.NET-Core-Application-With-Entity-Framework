@model IEnumerable<Ecommerce.Models.Product>

<h1>Product List</h1>
<div class="container-fluid">
    <a class="btn btn-primary btn-sm" asp-controller="Product" asp-action="Create">Add Product</a>
    <table class="table table-responsive-sm table-striped table-hover table-sm table-bordered">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Expire Date</th>
                <th>Category Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.ExpireDate</td>
                    <td>@product.Category.Name</td>
                    <td>
                        <a class="btn btn-info btn-sm text-white"><i class="fas fa-edit pr-1"></i>Edit</a>
                        <a class="btn btn-danger btn-sm text-white"><i class="fas fa-trash-alt pr-1"></i>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>